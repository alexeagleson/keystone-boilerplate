        //- strong #{posts.first}
        //-  |  to 
        //- strong #{posts.last}
        //-  |  of 
        //- strong #{posts.total}
        //-   |  posts

      .container
        .row: .col-sm-8.col-md-6
          form(method='post')
            input(type='hidden', name='action')
            .form-group
              label Event Name
              input(type='text', name='name')
