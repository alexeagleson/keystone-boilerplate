doctype html
html(lang="en")
  head
    title= "Add Event"
  body
    if enquirySubmitted
      h3 Your Event has been added to the database
    else
      if posts.length

        ul
          each post in posts
            li!= post.name + ': ' + post.description

        //- p #{posts}
